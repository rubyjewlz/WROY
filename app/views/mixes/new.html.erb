<h1>New Mix</h1>
<%= form_for :mixes, url: mixes_path do |f| %>
  <% if @mixes.errors.any? %>
  <div id="error_explanation">
  	<h2>
  		<%= pluralize(@mixes.errors.count, "error") %>
  		prohibited
  		this mix from being saved:
  	</h2>
<ul>
<% @mixes.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
</div>
<% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Back', mixes_path %>